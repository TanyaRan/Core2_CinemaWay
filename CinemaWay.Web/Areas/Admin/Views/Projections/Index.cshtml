@model AdminListProjectionsViewModel

@{
    ViewData["Title"] = "Projections Administration";
}

<h2>
    @ViewData["Title"]
    <span class="pull-right"><a class="btn btn-lg btn-primary" asp-controller="Projections" asp-action="Create">Add Projection</a></span>
</h2>

<table class="table table-hovered">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Theme
            </th>
            <th>
                Lecturer
            </th>
            <th>
                Date
            </th>
            <th>
                Time
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proj in Model.Projections)
        {
            <tr>
                <td>
                    @proj.Movie
                </td>
                <td>
                    @proj.Theme
                </td>
                <td>
                    @proj.Lecturer
                </td>
                <td>
                    @proj.Date.ToShortDateString()
                </td>
                <td>
                    @proj.StartTime:00
                </td>
                <td>
                    @proj.Price
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" asp-controller="Projections" asp-action="Index" asp-route-page=@Model.PreviousPage>&laquo;</a>
        </li>
        @if (Model.PreviousPage != Model.CurrentPage)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Projections" asp-action="Index" asp-route-page=@Model.PreviousPage>
                    @Model.PreviousPage
                </a>
            </li>
        }

        <li class="page-item active">
            <a class="page-link" asp-controller="Projections" asp-action="Index" asp-route-page=@Model.CurrentPage>
                @Model.CurrentPage
            </a>
        </li>
        @if (Model.CurrentPage != Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Projections" asp-action="Index" asp-route-page=@Model.NextPage>
                    @Model.NextPage
                </a>
            </li>
        }
        <li class="page-item">
            <a class="page-link" asp-controller="Projections" asp-action="Index" asp-route-page=@Model.NextPage>&raquo;</a>
        </li>
    </ul>
</div>