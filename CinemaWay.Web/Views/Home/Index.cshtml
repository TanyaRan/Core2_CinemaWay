@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://static.rogerebert.com/uploads/review/primary_image/reviews/great-movie-departures-2009/hero_EB20111205REVIEWS08111209995AR.jpg" alt="2009" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    DEPARTURES (2009)
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://static.rogerebert.com/uploads/review/primary_image/reviews/great-movie-the-pledge-2001/hero_EB20120618REVIEWS08120619982AR.jpg" alt="2001" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    THE PLEDGE (2001)
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://static.rogerebert.com/uploads/review/primary_image/reviews/star-wars-episode-vii---the-force-awakens-2015/hero_Star-Wars-Force-Awakens-2015.jpg" alt="AI" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    STAR WARS(2015)
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://static.rogerebert.com/uploads/review/primary_image/reviews/great-movie-cache-2005/hero_EB20100113REVIEWS08100119986AR.jpg" alt="2006" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    CACHÉ(2006)
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">
                    <h3 class="text-danger">
                        Botique movie theater
                        <span class="pull-right">
                            <a asp-area="" asp-controller="Cinema" asp-action="Index" class="btn btn-default">Save your ticket!</a>
                        </span>
                    </h3>
                </div>
            </div>
            <div class="panel-body">
                <h4>Thematic screenings</h4>
                <h4 class="text-center">Lectures and Interesting Facts</h4>
                <h4>Competitions with prizes for fans</h4>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">
                    <h3 class="text-danger">
                        Fairy stories
                        <span class="pull-right">
                            <a asp-area="Storyteller" asp-controller="Stories" asp-action="Index" class="btn btn-default">Read with delight!</a>
                        </span>
                    </h3>
                </div>
            </div>
            <div class="panel-body">
                <h4 class="text-center">How and who shoots the movies</h4>
                <h4>Success, problems, awards ...</h4>
                <h4 class="text-center">Favorite artists, movie festivals</h4>
            </div>
        </div>
    </div>
</div>
