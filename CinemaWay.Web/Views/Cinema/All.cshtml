@model ListProjectionsAndSearchViewModel

@{
    ViewData["Title"] = "Cinema Program";
}

<div class="row">
    <form asp-action="Search">
        <div class="col-md-6 text-center">
            <input asp-for="SearchText" class="form-control" placeholder="Search..." required>
        </div>
        <div class="col-md-6 text-center">
            <input asp-for="SearchInMovies">
            <label asp-for="SearchInMovies"></label>

            <input asp-for="SearchInThemes">
            <label asp-for="SearchInThemes"></label>

            <input type="submit" class="btn btn-default" value="Search" />
        </div>
    </form>
</div>

<br />

<div class="row">
    @await Html.PartialAsync("_ListProjectionsPartial", Model.Projections)
</div>

<div class="text-center">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" asp-controller="Cinema" asp-action="All" asp-route-page=@Model.PreviousPage>&laquo;</a>
        </li>
        @if (Model.PreviousPage != Model.CurrentPage)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Cinema" asp-action="All" asp-route-page=@Model.PreviousPage>
                    @Model.PreviousPage
                </a>
            </li>
        }

        <li class="page-item active">
            <a class="page-link" asp-controller="Cinema" asp-action="All" asp-route-page=@Model.CurrentPage>
                @Model.CurrentPage
            </a>
        </li>
        @if (Model.CurrentPage != Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-controller="Cinema" asp-action="All" asp-route-page=@Model.NextPage>
                    @Model.NextPage
                </a>
            </li>
        }
        <li class="page-item">
            <a class="page-link" asp-controller="Cinema" asp-action="All" asp-route-page=@Model.NextPage>&raquo;</a>
        </li>
    </ul>
</div>
